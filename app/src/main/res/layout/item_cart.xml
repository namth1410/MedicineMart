<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_160sdp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:src="@drawable/berberin" />


        <LinearLayout
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Thuốc ho Astemix scasasdasdasdasdasdasdfsdfsdfsfsdfsdfsdfsdfdasdasdasd"
                android:textColor="@color/black"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50,000đ"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_20sdp"
                    android:layout_gravity="center_vertical">

                </TextView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_gravity="center_vertical">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_sum"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:drawableStart="@drawable/plus"
                        android:background="@color/white"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/btn_sum"
                        android:layout_toRightOf="@+id/btn_sub"
                        android:text="1"
                        android:layout_centerVertical="true"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20sdp" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_sub"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/minus"
                        android:background="@color/white"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>